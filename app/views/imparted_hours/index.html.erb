<div class="container">
  <h2 class="text-center"> <%= t('.imparted_hours') %> </h2>
  <p> <%= t('.list_hours_worked') %>  </p>            
  <table class="table table-bordered">
    <thead>
      <tr>
        <th> id </th>
        <th><%= t('.hours') %></th>
        <th><%= t('.date') %></th>
        <th class="text-center"><%= t('.delete_time') %></th>
      </tr>
    </thead>
    <tbody>
      <% @imparted_hours.each do |imparted_hour| %>
      <tr>
        <td>  <%= imparted_hour.id %> </td>
        <td>  <%= (imparted_hour.minutes.to_f/60).round(2) %> </td>
        <td>  <%= l imparted_hour.date, format: :day_month_year %> </td>
        <td class="text-center"> 
          <%= link_to journey_imparted_hour_path(imparted_hour.journey, imparted_hour), data: { confirm: 'Are you sure?' }, method: :delete do %>
            <i class="fa fa-times"></i> 
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  
  <p> <%= t('.list_hours_paid') %>  </p>            
  <table class="table table-bordered">
    <thead>
      <tr>
        <th> id </th>
        <th><%= t('.minutes_paid') %></th>
        <th><%= t('.total_paid') %> (euros)</th>
        <th><%= t('.date_paid') %></th>
      </tr>
    </thead>
    <tbody>
      <% if @orders %>
        <% @orders.each do |order| %>
        <tr>
          <td>  <%= order.id %> </td>
          <td>  <%= order.minutes %> </td>
          <td>  <%= (order.minutes.to_f*order.minutes/60).round(2) %> </td>
          <td>  <%= l order.created_at, format: :day_month_year %> </td>
        </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>